{
    "name": "gadget-service-backend",
    "version": "1.0.0",
    "description": "Backend for the Gadget Service application",
    "main": "dist/server.js",
    "scripts": {
        "start": "nodemon dist/server.js --exec ts-node",
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "prestart": "npm run build"
    },
    "dependencies": {
        "@types/mongodb": "^4.0.7",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^5.12.13",
        "nodemon": "^3.1.4",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/mongoose": "^5.11.97",
        "@types/uuid": "^10.0.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.4"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node",
        "ignore": [
            "dist/**/*"
        ]
    }
}
